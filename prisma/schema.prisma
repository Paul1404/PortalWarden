datasource db {
  provider = "postgres"
  url      = "postgresql://admin:postgres12@localhost:5432/access-control"
}

generator client {
  provider = "prisma-client-js"
}

model ValidTag {
  id        Int      @id @default(autoincrement())
  tag       String   @unique
  timestamp DateTime @default(now())
  username  String   // Assuming this is not unique and not optional
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now()) // Creation timestamp for User
}

model RfidLog {
  id        Int      @id @default(autoincrement())
  rfidId    BigInt
  timestamp DateTime @default(now())
}

